#: import BoxLayout kivy.uix.boxlayout

<forgotPassword_Content_Dialog>:
    password_tf: password_tf.__self__
    label_tf: label_tf.__self__
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y:None
    height: "120dp"

    MDLabel:
        id: label_tf
        text: "Enter the verification code"
        font_style: "H5"

    MDTextField:
        id: password_tf
        focus: True
        hint_text: "Enter Verification Code"
        helper_text: "Incorrect Code"
        helper_text_mode: "on_error"



<RaisedButton>:
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1, 1, 1, 1.0)
    normal_color: (0.117, 0.565, 1, 1.0)
    size_hint: 1, None
    size: "0dp", "30dp"
    border_radius: [18]
    canvas.before:
        Color:
            rgba: self.normal_color if self.state == "normal" else self.back_color
        RoundedRectangle:
            pos: self.pos
            size: self.size

<ForgotPasswordDemo>:
    email_recovery: email_recovery.__self__
    MDBoxLayout:
        adaptive_height: True
        pos_hint: {"x": 0, "y": 0.94}
        MDToolbar:
            title: "Forgot Password"

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        pos_hint: {"x": 0, "y": 0.7}
        spacing: dp(30)
        padding: dp(10)
        MDTextField:
            id: email_recovery
            hint_text: "Enter Email"
            helper_text: "Email Not Exist"
            helper_text_mode: "on_error"

        RaisedButton:
            back_color: (1, 1, 1, 1.0)
            normal_color: (0.117, 0.565, 1, 1.0)
            text: "Submit"
            on_release: root.checking_email_to_update_password()







