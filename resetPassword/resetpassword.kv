<RaisedButton>:
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1, 1, 1, 1.0)
    normal_color: (0.117, 0.565, 1, 1.0)
    size_hint: 1, None
    size: "0dp", "30dp"
    border_radius: [18]
    canvas.before:
        Color:
            rgba: self.normal_color if self.state == "normal" else self.back_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: self.border_radius

<ResetPasswordDemo>:
    new_password: new_password.__self__
    confirm_new_password: confirm_new_password.__self__
    MDBoxLayout:
        adaptive_height: True
        pos_hint: {"x": 0, "y": 0.94}
        MDToolbar:
            title: "Reset Password"

    MDBoxLayout:
        adaptive_height: True
        pos_hint: {"x":0, "y": 0.75}
        MDLabel:
            halign: "center"
            text: "Reset Your Password"
            font_style: "Body2"

    MDBoxLayout:
        adaptive_height: True
        pos_hint: {"x":0, "y": 0.45}
        orientation: "vertical"
        padding: "10dp"

        MDTextField:
            id: new_password
            hint_text: "New password"
            helper_text: "Doesn't fit the requirement"
            helper_text_mode: "on_error"

        MDTextField:
            id: confirm_new_password
            hint_text: "Confirm new password"
            helper_text: "Doesn't fit the requirement"
            helper_text_mode: "on_error"

        RaisedButton:
            back_color: (1, 1, 1, 1.0)
            normal_color: (0.117, 0.565, 1, 1.0)
            text: "Submit"
            on_press: root.reset_user_password()








